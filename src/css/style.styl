@font-face
  font-family HFNSSV
  src url("./HFNSSvector1.ttf")

body
  margin 0
  padding 0
  background-color almostBlack
  
.footer-text
  color pointColor
  text-align center
  font-size 4em
  font-family HFNSSV
  margin-bottom 0px
  margin-top 50px
  
  
.point
  font-family HFNSSV
  color pointColor
  font-size 4em
  margin 0
  line-height 1em
  &.lil-big
    font-size 6em
  &.big
    font-size 11em
    text-align center
  &.sub-header
    text-align center
  &.outline
    text-shadow:
    -1px -1px 0 #000,
    1px -1px 0 #000,
    -1px 1px 0 #000,
    1px 1px 0 #000
  &.lil-small
    font-size 3em 
  &.small
    font-size 2em
  &.blue
    color prettyBlue
  &.ignorable
    color veryIgnorable
  &.blink
    animation: blink-animation 5s steps(3, start) infinite;
    -webkit-animation: blink-animation 5s steps(3, start) infinite;

.main-container
  width 100%
  position absolute
  top 50px
  left 0px
