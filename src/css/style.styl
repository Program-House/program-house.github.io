almostBlack = #030907
good        = #366317
prettyBlue  = #175cfe
red         = #f21d23

pointColor      = #b0a69a
importantText   = #b39f4b
importanterText = #e3d34b

ignorable         = #807872
veryIgnorable     = #54574d
