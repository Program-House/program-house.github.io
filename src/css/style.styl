.header-bar-container
  position fixed
  top 0
  left 0
  width 100%
  height 50px
  border-bottom 1px solid i3
  background backgroundx2
  z-index 5
  
.header-bar
  width 1000px
  margin auto
  display flex
  justify-content space-between

.button
  font-family HFNSSV
  color importantText
  font-size 3em
  margin 8px
  float left
  cursor pointer
  text-decoration none
  &.small
    font-size 2em
    margin-left 0px
    margin-right 16px
  &.lit
    color importanterText
  &:hover
    color importanterText
  &.footer
    float none
    text-align center
    
